{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6",
            "ESNext"
        ],
        "paths": {
            "@figma/*": [
                "./node_modules/@figma/*"
            ],
            "@types/*": [
                "./node_modules/@types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma"
        ],
        "module": "ESNext",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true
    }
}